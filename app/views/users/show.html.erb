
<div class="container px-5 px-sm 0">
  <div class="row">

    <!-- ユーザーの詳細 -->
    <div class="col-md-3">
      <%= render partial: 'users/user', locals: { user: @user, book: @book} %>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(40,40) %>
                <% end %>
                </th>
              <th>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>