<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

        <!--エラー記載-->
        <div id="error_explanation" class="text-danger">
          <% if @user.errors.any? %>
          <h3>
            <% if @user.errors.count == 1 then %>
              1 error prohibited this obj from being saved:
            <% else %>
              <%= @user.errors.count %>
              errors prohibited this obj from being saved:
            <% end %>
          </h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>


      <%= form_with model: @user do |f| %>

        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control name" %>
          <!--%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name" %-->
        </div>

        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*",class: "form-control-file user_image" %>
        </div>

        <div class="form-group">
          <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputintroduction", class: "form-control introduction" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
